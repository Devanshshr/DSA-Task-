class Solution {
    public int searchInsert(int[] arr, int target) {
        int i=0;
        int j=arr.length-1;
        while(i<=j){
            int m=(i+j)/2;
            if(arr[m]==target){
                return m;
            }
            else if(arr[m]<target){
                i=m+1;
               
            }
            else{
                j=m-1;
             
            }

        }
        return i;
        
    }
}
