class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        int s=0;
        int e=letters.length-1;
        char ans=letters[0];
        while(s<=e){
            int m=s+(e-s)/2;
            int mletter=(int)letters[m];
            int tletter=(int)target;
            if(mletter>tletter){
                e=m-1;
                ans=letters[m];

            }
            else{
                s=m+1;

            }
        }
        return ans;
        
    }
}
